FROM python:3.11-slim

WORKDIR /app

# Install basic dependencies for the operator
RUN pip install --no-cache-dir requests

# Create a non-root user
RUN useradd -m -u 1000 mcpuser && chown -R mcpuser:mcpuser /app
USER mcpuser

# This is a placeholder operator that depends on the tenor MCP service
# In a real deployment, this would contain operator logic
CMD ["python", "-c", "print('Tenor MCP Operator running'); import time; time.sleep(86400)"]